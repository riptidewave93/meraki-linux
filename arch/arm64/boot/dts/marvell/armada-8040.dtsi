/*
 * Device Tree file for the Armada 8040 SoC, made of an AP806 Quad and
 * two CP110.
 */

#include "armada-ap806-quad.dtsi"
#include "armada-cp110-master.dtsi"
#include "armada-cp110-slave.dtsi"

/ {
	model = "Marvell Armada 8040";
	compatible = "marvell,armada8040", "marvell,armada-ap806-quad",
	             "marvell,armada-ap806";

	ap806 {
		config-space {
			/* Temp: disable all Coresight nodes */
			etm0@c40000 {
				status = "disabled";
			};
			etm1@d40000 {
				status = "disabled";
			};
			etm2@e40000 {
				status = "disabled";
			};
			etm3@f40000 {
				status = "disabled";
			};
			etf0@809000 {
				status = "disabled";
			};
			etf1@80a000 {
				status = "disabled";
			};
			etf2@80b000 {
				status = "disabled";
			};
			etf3@80c000 {
				status = "disabled";
			};
			funnel@810000 {
				status = "disabled";
			};
			etf5@811000 {
				status = "disabled";
			};
			etr@812000 {
				status = "disabled";
			};
			axim-ddr-rd@840000 {
				status = "disabled";
			};
			axim-ddr-wr@841000 {
				status = "disabled";
			};
			axim-ihb-rd@848000 {
				status = "disabled";
			};
			axim-ihb-rd@849000 {
				status = "disabled";
			};
			smmu: iommu@5000000 {
				mmu-masters = <&usb3h0 0x483>,
					      <&usb3h1 0x484>;
			};
		};
	};

	cpn-110-master {
		config-space {
			/* Temp: disable all Coresight nodes */
			axim-cp-rd@3c5000 {
				status = "disabled";
			};
			axim-cp-wr@3c6000 {
				status = "disabled";
			};
			axim-ppv2-rd@3c0000 {
				status = "disabled";
			};
			axim-ppv2-wr@3c1000 {
				status = "disabled";
			};
			axim-hb1-rd@3c8000 {
				status = "disabled";
			};
			axim-hb1-wr@3c9000 {
				status = "disabled";
			};
			ppv22@000000 {
				dma-coherent;
			};
			usb3h0: usb3@500000 {
				#stream-id-cells = <1>;
			};
			usb3h1: usb3@510000 {
				#stream-id-cells = <1>;
			};
		};
		pcie@0x600000 {
			msi-parent = <&gic_v2m0>;
		};
		pcie@0x620000 {
			msi-parent = <&gic_v2m0>;
		};
		pcie@0x640000 {
			msi-parent = <&gic_v2m0>;
		};
	};
	cpn-110-slave {
		config-space {
			/* Temp: disable all Coresight nodes */
			axim-cp-rd@3c5000 {
				status = "disabled";
			};
			axim-cp-wr@3c6000 {
				status = "disabled";
			};
			axim-ppv2-rd@3c0000 {
				status = "disabled";
			};
			axim-ppv2-wr@3c1000 {
				status = "disabled";
			};
			axim-hb1-rd@3c8000 {
				status = "disabled";
			};
			axim-hb1-wr@3c9000 {
				status = "disabled";
			};
			ppv22@000000 {
				dma-coherent;
			};
		};
	};
};
