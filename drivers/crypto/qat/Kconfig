config CRYPTO_DEV_QAT
	tristate
	select CRYPTO_AEAD
	select CRYPTO_AUTHENC
	select CRYPTO_BLKCIPHER
	select CRYPTO_AKCIPHER
	select CRYPTO_HMAC
	select CRYPTO_SHA1
	select CRYPTO_SHA256
	select CRYPTO_SHA512
	select FW_LOADER
	select ASN1

config CRYPTO_DEV_QAT_IN_TREE
	tristate "Support for linux in-tree QAT drivers"
	depends on !CRYPTO_DEV_QAT_1_7
	help
	  Enables support for linux in-tree drivers for Intel's
	  QuickAssist Technology (QAT). These do not have support
	  for Monster Mash (mx250b, mx450b) HW crypto offload.

	  Enabling this for Monster Mash builds will greatly reduce
	  VPN throughput performance, and cannot be used in combination
	  with QAT1.7 which does support Monser Mash.

config CRYPTO_DEV_QAT_DH895xCC
	tristate "Support for Intel(R) DH895xCC"
	depends on CRYPTO_DEV_QAT_IN_TREE && X86 && PCI
	select CRYPTO_DEV_QAT
	help
	  Support for Intel(R) DH895xcc with Intel(R) QuickAssist Technology
	  for accelerating crypto and compression workloads.

	  To compile this as a module, choose M here: the module
	  will be called qat_dh895xcc.

